<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raulcabrera.venadostest.activities.PlayerDetailsActivity">
    <LinearLayout
        android:paddingTop="30dp"
        android:background="@drawable/grass_pattern"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="FICHA TÉCNICA"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/white" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/player_face"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/transparent"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:textColor="@android:color/white"
            android:text="Raul C. A."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/white"
            android:text="Defensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:padding="30dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FECHA DE NACIMIENTO"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
            <TextView
                android:text="29/05/1985"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUGAR DE NACIMIENTO"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
            <TextView
                android:text="Distrito Federal, México"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PESO"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
            <TextView
                android:text="81 KG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALTURA"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
            <TextView
                android:text="1.86 M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EQUIPO ANTERIOR"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
            <TextView
                android:text="CHIVAS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
